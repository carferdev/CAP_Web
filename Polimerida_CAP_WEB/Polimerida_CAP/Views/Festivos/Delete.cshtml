@model Polimerida_CAP.Models.FestivoViewModel

@{
    ViewData["Title"] = "Eliminar Día Festivo";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Eliminar Día Festivo</h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4><i class="icon fas fa-exclamation-triangle"></i> ¡Advertencia!</h4>
                        ¿Está seguro que desea eliminar este día festivo?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Fecha:</dt>
                        <dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-3">Descripción:</dt>
                        <dd class="col-sm-9">@Model.Descripcion</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="IdFestivo" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Eliminar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 